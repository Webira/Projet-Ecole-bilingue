{% extends 'base.html.twig' %}

{% block title %}Nos ateliers{% endblock %}

{% block body %}
    <h1><a href="{{ path ('ateliers') }}">Plateforme d'inscription les eleves aux Ateliers creatifs</a></h1>

    <div class="row my-4 text-center">
        {% for course in courses  %}
        <div class="col-md-4">
            <a href="{{ path('showcours', {id: course.id}) }}"><h3>{{ course.titre }}</h3></a>

        </div>
        {% endfor %}
        </div>

    <div class="row text-center">
        <div class="col-md-4">
            {# Affichage de la pagination dans la vue#}
            <div class="pagination-small">
                {{ knp_pagination_render(atelierpages) }}
            </div>
        </div>
        <div class="col-md-4"> </div>
         <div class="col-md-4 text-right">
             <h2><a class="text-muted btn btn-secondary mb-3" href="{{ path ('add_eleve') }}">Inscription aux Ateliers</a></h2>
         </div>
    </div>

    <section class="cours">
        <h4> Pour avoir l'information complete de cet Atelier, lire la suite</h4>

        <div class="row d-flex justify-content-center text-center">
            {% for cours in atelierpages %}

                <div class="col-md-3 m-2 mt-4 p-2 text-center" style='box-shadow: 2px 2px 4px grey'>
                    <h4 class="card-header">{{ cours.titre }}</h4>
                    <img src="{{ asset('images/imageCours/' ~ cours.photo) }}" class="d-block w-100" height="" alt="image atelier">

                    <div class="card">
{#                        <h4 class="card-title"></h4>#}
                        <h4 class="card-day">{{ cours.day }}</h4>
                        <h4 class="card-duree">{{ cours.duree }}</h4>
                        <h4 class="card-age">{{ cours.age }}</h4>
                        <div class="metadata">{{ cours.dateAt | date("d-m-y") }}</div>
                        {{ cours.description | slice(0,100) }}
                        <a class="btn btn-secondary col-md-12" href="{{ path('showcours', {id: cours.id}) }}">Lire la suite</a>

                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

   {% endblock %}

